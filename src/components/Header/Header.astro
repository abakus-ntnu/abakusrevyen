---
import Logo from "../Branding/Logo.astro";
import Navbar from "./Navbar/Navbar.astro";
import ThemeSwitcher from "./ThemeSwitcher.astro";

import MobileNavbar from "./MobileNavbar/MobileNavbar";

import { AlignJustify } from "lucide-astro";

const ITEMS = {
  "/opptak": "Opptak",
  "/om_oss": "Om oss",
  "/galleri": "Bildegalleri",
  "/revyer": "Tidligere revyer",
};
---

<header class="w-full">
  <div
    class="container mx-auto flex h-32 items-center justify-between px-6 py-3"
  >
    <a href="/" data-astro-prefetch="load">
      <Logo />
    </a>

    <div class="md:text-red flex gap-6">
      <div class="hidden md:flex">
        <Navbar items={ITEMS} />
      </div>

      <ThemeSwitcher />

      <div class="flex md:hidden">
        <MobileNavbar client:load items={ITEMS}>
          <span class="text-foreground transition-colors hover:text-accent">
            <AlignJustify />
          </span>
        </MobileNavbar>
      </div>
    </div>
  </div>
</header>
