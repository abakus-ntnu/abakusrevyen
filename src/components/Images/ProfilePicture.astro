---
import {
  Image,
  type LocalImageProps,
  type RemoteImageProps,
} from "astro:assets";

interface Props {
  class: string;
  src: ImageMetadata;
  alt: string;
}

const { class: className, src, alt, ...rest } = Astro.props;
---

<Image
  class:list={["aspect-square w-auto rounded-full", className]}
  src={src}
  alt={alt}
  {...rest}
/>
