---
import PageLayout from "@/layouts/PageLayout.astro";
import { Image } from "astro:assets";
import { getCollection, getEntry, render } from "astro:content";

const om_oss = await getCollection("om_oss");
const groups = await getCollection("grupper");
---

<PageLayout title="Om oss">
  <div class="container mx-auto">
    <h1 class="font-medium text-xl text-center pb-2">Om oss</h1>
    <a
      >Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla fermentum
      elit metus, ac consequat arcu hendrerit at. Donec ac arcu pharetra,
      feugiat nisl vel, auctor erat. Donec quis erat id tellus mattis interdum
      vitae sed ante. Nullam vehicula sit amet velit sed volutpat. Sed id
      facilisis velit. Nunc facilisis rutrum nunc et blandit. Maecenas lobortis
      risus vel ante euismod, sed lacinia quam pellentesque. Orci varius natoque
      penatibus et magnis dis parturient montes, nascetur ridiculus mus.</a
    >
    <ul>
      {
        om_oss.map(({ slug, data: { title } }) => (
          <li>
            <a href={`/om_oss/${slug}`}>{title}</a>
          </li>
        ))
      }
    </ul>

    <ul>
      {
        groups.map(({ slug, data: { name, brief, logo } }) => (
          <li>
            <Image src={logo} alt={`${name} logo`} />
            <a href={`/grupper/${slug}`}>{name}</a>
          </li>
        ))
      }
    </ul>
  </div>
</PageLayout>
