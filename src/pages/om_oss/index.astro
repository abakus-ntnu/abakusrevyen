---
import PageLayout from "@/layouts/PageLayout.astro";

import MultiImageCard from "@/components/Card/MultiImageCard.astro";
import Title from "@/components/Common/Title.astro";

import { getCollection } from "astro:content";

import { SHOWS } from "@/lib/constants";
import Card from "@/components/Card/Card.astro";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";

import { Calendar, Pencil } from "lucide-astro";

const om_oss = await getCollection("om_oss");
const groups = await getCollection("grupper");
const leaders = await getCollection("ledere");

const now = new Date();
const spotlight = groups[Math.floor(Math.random() * groups.length)];
const spotlightLeader =
  spotlight.data.leaders && spotlight.data.leaders.length >= 1
    ? await getEntry(spotlight.data.leaders[0])
    : undefined;
---

<PageLayout title="Om oss">
  <div class="container mx-auto space-y-6 px-6">
    <Title
      >Om <span class="text-primary" id="about-branding">Abakusrevyen</span
      ></Title
    >

    <div
      class="grid grid-cols-2 mx-auto max-w-screen-sm lg:gap-24 md:gap-16 gap-10 py-6 md:px-6"
    >
      <a href="/grupper" class="group">
        <MultiImageCard
          images={groups.map((group) => ({
            src: group.data.logo,
            alt: `${group.data.name} logo`,
          }))}
        >
          Revygruppene
        </MultiImageCard>
      </a>

      <a href="/ledere" class="group">
        <MultiImageCard
          images={leaders.map((leader) => ({
            src: leader.data.image,
            alt: `${leader.data.name}`,
          }))}
        >
          Lederene
        </MultiImageCard>
      </a>
    </div>

    <div class="grid md:grid-cols-2 grid-cols-1 gap-6 max-h-fit">
      <div class="space-y-3 md:order-1 order-3">
        <h2 class="font-bold text-lg">Forestillinger</h2>

        <ul class="group/timeline max-w-fit">
          {
            SHOWS.map((show) => (
              <li class={now < show.when ? "opacity-100" : "opacity-50"}>
                <div class="flex items-center gap-3">
                  <div class="w-3 aspect-square rounded-full bg-primary" />
                  <span class="font-medium">
                    {show.when.toLocaleString("nb-NO", {
                      day: "numeric",
                      month: "long",
                      year: "numeric",
                      hour: "numeric",
                      minute: "2-digit",
                    })}
                  </span>
                </div>
                <div class="ml-1.5 pl-[1.125rem] border-l-[1px] border-foreground border-dashed pr-3">
                  <div class="py-3">
                    <Card>
                      <div class="flex md:flex-row flex-col gap-1">
                        {show.name} p√•{" "}
                        <a href={show.where.mapLink} class="underline">
                          {show.where.name}
                        </a>
                      </div>
                    </Card>
                  </div>
                </div>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="flex flex-col gap-3 order-2">
        <h2 class="font-bold text-lg">Spotlight</h2>

        <a href={`/grupper/${spotlight.slug}`}>
          <div
            class="grow flex gap-3 bg-bg-accent border-[1px] border-gray-200 dark:border-gray-500 rounded-lg"
          >
            <div class="relative min-w-fit">
              <Image
                src={spotlight.data.logo}
                alt="Spotlight group logo"
                loading="eager"
                class="h-full w-auto aspect-square rounded-l-lg"
              />
              {
                spotlightLeader ? (
                  <Image
                    src={spotlightLeader.data.image}
                    width={500}
                    height={500}
                    loading="eager"
                    alt="Spotlight leader"
                    class="absolute bottom-1.5 right-1.5 rounded-full h-1/2 w-auto aspect-square"
                  />
                ) : undefined
              }
            </div>
            <div class="space-y-3 py-3 pr-1.5">
              <h3 class="font-medium">{spotlight.data.name}</h3>
              <p class="lg:text-base md:text-sm sm:text-base text-sm">
                {spotlight.data.spotlight ?? spotlight.data.brief}
              </p>
            </div>
          </div>
        </a>
      </div>
    </div>

    <div class="space-y-6">
      <h2 class="font-bold text-lg">Innlegg</h2>

      <ul class="space-y-3">
        {
          om_oss
            .sort((a, b) => b.data.pubDate - a.data.pubDate)
            .map(
              ({
                slug,
                data: { title, pubDate, updateDate, description, image },
              }) => (
                <li>
                  <a href={`/om_oss/${slug}`}>
                    <div class="h-48 rounded-lg border-[1px] border-gray-200 dark:border-gray-500 flex gap-3">
                      <div class="overflow-hidden">
                        <Image
                          src={image}
                          alt={`${title} post`}
                          class="h-full w-auto rounded-l-lg"
                        />
                      </div>

                      <div class="py-3 pr-1.5 flex flex-col justify-between">
                        <h2 class="font-medium">{title}</h2>
                        <p>{description}</p>
                        <div class="flex text-sm items-center gap-3">
                          <Calendar />{" "}
                          {pubDate.toLocaleString("NO-nb", {
                            day: "numeric",
                            month: "numeric",
                            year: "numeric",
                          })}
                          <Pencil />
                          {(updateDate ?? pubDate).toLocaleString("NO-nb", {
                            day: "numeric",
                            month: "numeric",
                            year: "numeric",
                          })}
                        </div>
                      </div>
                    </div>
                  </a>
                </li>
              ),
            )
        }
      </ul>
    </div>
  </div>
</PageLayout>
