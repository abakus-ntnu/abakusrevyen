---
import PageLayout from "@/layouts/PageLayout.astro";

import MultiImageCard from "@/components/Card/MultiImageCard.astro";
import Title from "@/components/Common/Title.astro";

import { getCollection } from "astro:content";

import { SHOWS } from "@/lib/constants";
import Card from "@/components/Card/Card.astro";

const om_oss = await getCollection("om_oss");
const groups = await getCollection("grupper");
const leaders = await getCollection("ledere");

const now = new Date();
---

<PageLayout title="Om oss">
  <div class="container mx-auto space-y-6 px-6">
    <Title>Om oss</Title>

    <div
      class="grid grid-cols-2 mx-auto max-w-screen-sm lg:gap-24 md:gap-16 gap-10 py-6 md:px-6"
    >
      <a href="/grupper" class="group">
        <MultiImageCard
          images={groups.map((group) => ({
            src: group.data.logo,
            alt: `${group.data.name} logo`,
          }))}
        >
          Revygruppene
        </MultiImageCard>
      </a>

      <a href="/ledere" class="group">
        <MultiImageCard
          images={leaders.map((leader) => ({
            src: leader.data.image,
            alt: `${leader.data.name}`,
          }))}
        >
          Lederene
        </MultiImageCard>
      </a>
    </div>

    <div class="space-y-3">
      <h2 class="font-bold text-lg">Forestillinger</h2>

      <ul class="group/timeline max-w-fit">
        {
          SHOWS.map((show) => (
            <li style={`opacity: ${now > show.when ? "100%" : "90%"}`}>
              <div class="flex items-center gap-3">
                <div class="w-3 aspect-square rounded-full bg-primary" />
                <span class="font-medium">
                  {show.when.toLocaleString("nb-NO", {
                    day: "numeric",
                    month: "long",
                    year: "numeric",
                    hour: "numeric",
                    minute: "2-digit",
                  })}
                </span>
              </div>
              <div class="ml-1.5 pl-[1.125rem] border-l-[1px] border-foreground border-dashed pr-3">
                <div class="py-3">
                  <Card>
                    {show.name} p√• {show.where}
                  </Card>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>

    <div>
      <h2 class="font-bold text-lg">Innlegg</h2>

      <ul>
        {
          om_oss.map(({ slug, data: { title } }) => (
            <li>
              <a href={`/om_oss/${slug}`}>{title}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</PageLayout>
