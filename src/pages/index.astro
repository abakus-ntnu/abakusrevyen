---
import Countdown from "@/layouts/Home/Countdown.astro";
import Live from "@/layouts/Home/Live.astro";
import Break from "@/layouts/Home/Break.astro";
import Recruitment from "@/layouts/Home/Recruitment.astro";

import { getCurrentPeriod, nextShow } from "@/lib/periods";
import { SHOWS } from "@/lib/constants";

const period = getCurrentPeriod();
const next = nextShow() ?? SHOWS.toReversed()[0];
---

{
  period == "break" ? (
    <Break />
  ) : period == "recruitment" ? (
    <Recruitment />
  ) : period == "showCurrent" ? (
    <Live />
  ) : (
    <Countdown date={next.when} />
  )
}
